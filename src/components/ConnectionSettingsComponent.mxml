<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%"
  verticalGap="12">
  
  <mx:Script>
    <![CDATA[
      import com.graphmind.ConnectionController;
    ]]>
  </mx:Script>
          
  <mx:DataGrid width="100%" height="100"
    dataProvider="{ConnectionController.connections}">
    <mx:columns>
      <mx:DataGridColumn headerText="ID" dataField="id" width="30"/>
      <mx:DataGridColumn headerText="Name" dataField="shortName"/>
    </mx:columns>
  </mx:DataGrid>
  
  <mx:HBox verticalAlign="middle" width="100%">
    <mx:Label text="Base path:" width="70"/>
    <mx:TextInput id="connectFormBasePath" text="http://" tabIndex="10" width="100%"/>
  </mx:HBox>
  
  <mx:HBox verticalAlign="middle" width="100%">
    <mx:Label text="Endpoint:" width="70"/>
    <mx:TextInput id="connectFormEndPoint" text="" tabIndex="11" width="100%"/>
  </mx:HBox>
  
  <mx:HBox verticalAlign="middle" width="100%">
    <mx:Label text="Username:" width="70"/>
    <mx:TextInput id="connectFormUsername" tabIndex="12" width="100%"/>
  </mx:HBox>
  
  <mx:HBox verticalAlign="middle" width="100%">
    <mx:Label text="Password:" width="70"/>
    <mx:TextInput id="connectFormPassword" displayAsPassword="true" tabIndex="13" width="100%"/>
  </mx:HBox>
  
  <mx:Button styleName="button" label="Add new site" 
    id="saveButton"
    tabIndex="14" />
  
</mx:VBox>
