<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" 
	width="100%" height="100%">
	
	<mx:Script>
		<![CDATA[
		  import com.graphmind.TreeMapViewController;
			import com.graphmind.ApplicationController;
			
      [Embed(source='assets/images/draganddrop.png')]
      [Bindable] public var image_dragAndDrop:Class;
		]]>
	</mx:Script>

	<!-- Mindmap editor area -->
	<mx:Canvas right="0" top="30" bottom="0" left="0" id="desktop_wrapper" focusEnabled="true"
		mouseUp="{TreeMapViewController.i.onMouseUp_MindmapStage();}"
		mouseDownOutside="{TreeMapViewController.i.onMouseDownOutside_MindmapStage();}"
		mouseOut="{TreeMapViewController.i.onMouseOut_MindmapStage();}">
    
    <mx:Canvas id="desktop_overlay" 
      width="{TreeMapViewController.DEFAULT_DESKTOP_WIDTH}" 
      height="{TreeMapViewController.DEFAULT_DESKTOP_HEIGHT}" 
      focusEnabled="false"
      scaleX="{desktopScaleHSlider.value/100}"
      scaleY="{desktopScaleHSlider.value/100}"/>
      
    <!-- sublayer for cloud grapics -->
		<mx:Canvas id="desktop_cloud" width="{TreeMapViewController.DEFAULT_DESKTOP_WIDTH}" height="{TreeMapViewController.DEFAULT_DESKTOP_HEIGHT}"
			scaleX="{desktopScaleHSlider.value/100}"
			scaleY="{desktopScaleHSlider.value/100}"/>
          
    <!-- Image for imitating drag-and-drop -->
    <!--<mx:Container id="dragAndDrop_shape_container">-->
      <mx:Image source="{image_dragAndDrop}" visible="false" id="dragAndDrop_shape" mouseUp="{TreeMapViewController.i.onMouseUp_DragAndDropImage();}"/>
    <!--</mx:Container>-->
      
      
		<mx:Canvas id="desktop" width="{TreeMapViewController.DEFAULT_DESKTOP_WIDTH}" height="{TreeMapViewController.DEFAULT_DESKTOP_HEIGHT}" 
			mouseDown="{TreeMapViewController.i.onMouseDown_InnerMindmapStage();}"
			mouseUp="{TreeMapViewController.i.onMouseUp_InnerMindmapStage();}"
			mouseMove="{TreeMapViewController.i.onMouseMove_InnerMindmapStage();}"
			scaleX="{desktopScaleHSlider.value/100}"
			scaleY="{desktopScaleHSlider.value/100}">
    <mx:Canvas id="desktop_arrowlink" 
      width="{TreeMapViewController.DEFAULT_DESKTOP_WIDTH}" 
      height="{TreeMapViewController.DEFAULT_DESKTOP_HEIGHT}" 
      focusEnabled="true"/>
			</mx:Canvas>
	</mx:Canvas>
	<!-- END mindmap editor -->
	
	<mx:Canvas height="30" left="0" right="0" top="0"
		backgroundAlpha="0.5"
		backgroundColor="0x000000"
		color="0xFFFFFF">
		<mx:HBox paddingTop="4" paddingLeft="4">
			<mx:LinkButton top="4" label="Fullscreen" click="{TreeMapViewController.i.onClick_FullscreenButton();}"
				id="fullScreenLinkButton"/>
			
			<mx:HSlider top="4" minimum="25" maximum="200" snapInterval="25" enabled="true" allowTrackClick="true"
				value="100"
				id="desktopScaleHSlider"/>
			
			<mx:Label paddingTop="2" text="{desktopScaleHSlider.value + '%'}"
				id="desktopScaleLabel"/>
				
			<mx:LinkButton top="4" label="Save" click="{TreeMapViewController.i.onClick_SaveGraphmindButton();}" color="#FFDBA1"
				visible="{TreeMapViewController.i.isTreeUpdated}"
				id="saveLinkButton"/>
		</mx:HBox>
	</mx:Canvas>
			
</mx:Canvas>
